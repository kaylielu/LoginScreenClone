<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:alpha="0.8"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.kaylie.loginscreen.LoginActivity"
    android:background="@drawable/airbnb_background_converted">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/airbnb"
        android:textSize="70sp"
        android:textColor="#FFFFFFFF"
        android:id="@+id/tvTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="78dp" />

    <ImageButton
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:id="@+id/ibFacebook"
        android:src="@drawable/airbnb"
        android:layout_below="@+id/tvTitle"
        android:layout_marginTop="23dp"
        android:layout_centerHorizontal="true"
        />

    <ImageButton
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:id="@+id/ibGoogle"
        android:src="@drawable/airbnb_google"
        android:layout_below="@+id/ibFacebook"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="192dp"
        android:layout_height="28dp"
        android:text="@string/email"
        android:textAllCaps="false"
        android:id="@+id/btEmail"
        android:background="#60FFFFFF"
        android:textSize="10sp"
        android:textColor="#FFFFFF"
        android:layout_below="@+id/ibGoogle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        />

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/login_description"
        android:id="@+id/textView"
        android:textSize="9sp"
        android:textColor="#FFFFFF"
        android:layout_marginTop="26dp"
        android:layout_below="@+id/btEmail"
        android:layout_centerHorizontal="true"
        android:textAlignment="center" />



</RelativeLayout>
